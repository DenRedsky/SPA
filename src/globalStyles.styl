@import '~styles'

*
  -webkit-tap-highlight-color transparent
  box-sizing border-box

html
  height 100%
  font-size 14px

body
  color $black
  height 100%
  background-color #f2f4f6
  font-family 'Times New Roman', Times, serif
  display flex
  margin 0
  flex-direction column
  -webkit-font-smoothing antialiased
  text-size-adjust 100%

:global(#app)
  display flex
  flex-direction column
  align-items center
